<%include partials/header%>

<div class="container">
    <div class="row">
        <div class="col md-2">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= tasks._id%>" method="POST">
                        <div class="form-group">
                            <input type="text" name="titulo" placeholder="Incerta el titulo" class="form-control" value="<%=tasks.titulo%>">
                        </div>
                        <div class="form-group">
                                <input type="text" name="autor" placeholder="Incerta el autor" class="form-control" value="<%=tasks.autor%>">
                            </div>
                        <div class="form-group">
                                <textarea name="categoria" id="" cols="80" class="form-control" placeholder="Incerta una descripcion"><%=tasks.categoria%></textarea>
                            </div>
                            <button type="update" class="btn btn-primary">Actualizar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%include partials/footer%>